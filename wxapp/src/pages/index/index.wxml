<view class="page">
  <van-search
    class="search-box"
    value="{{ searchValue }}"
    placeholder="点击搜索"
    bind:focus="onSearch"
  ></van-search>
  <view wx:if="{{ !loading }}" class="content">
    <van-tabs sticky class="article-tabs">
      <van-tab
        wx:for="{{ modules }}"
        wx:for-item="tab"
        wx:key="id"
        title="{{tab.title}}"
        class="article-tab"
      >
        <scroll-view class="article-box" wx:if="{{ !loadingArticle }}">
          <article-card category="博客大赛" title="博客大赛实在是太好看了博客大赛实在是太好看了博客大赛实在是太好看了"></article-card>
          <article-card category="博客大赛" title="博客大赛实在是太好看了"></article-card>
          <article-card category="博客大赛" title="博客大赛实在是太好看了"></article-card>
          <article-card category="博客大赛" title="博客大赛实在是太好看了"></article-card>
          <view class="pager">
            <view
              wx:if="{{true}}"
              class="p-btn bubble"
              data-page="{{tab.paging}}"
              bindtap="loadMore"
            >
              查看更多
            </view>
            <view wx:else class="p-btn">没有了</view>
          </view>
        </scroll-view>
        <view class="article-box" wx:else>
          <van-skeleton class="skeleton" title row="8"/>
        </view>
      </van-tab>
    </van-tabs>
  </view>
  <view wx:else class="loading">
    <van-skeleton class="skeleton" title row="6"/>
    <van-skeleton class="skeleton" title row="3"/>
    <van-skeleton class="skeleton" title row="4"/>
  </view>
</view>
